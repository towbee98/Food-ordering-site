					<div class="col-md-4 col-sm-6">
						<div class="seat_researve_field">
							<div class="single_field">
								<label for="field1">Your First Name</label>
								<input name="first_name" type="text" style="width: 223px;" required="">
							</div>
						</div>
					</div>
					<div class="col-md-4 col-sm-6">
						<div class="seat_researve_field">
							<div class="single_field">
								<label for="field2">Your Last Name</label>
								<input name="last_name" type="text" style="width: 223px;" required="">
							</div>
						</div>
					</div>
					<div class="col-md-4 col-sm-6">
						<div class="seat_researve_field">
							<div class="single_field">
								<label for="field1">Email Address</label>
								<input name="email" type="email" style="width: 223px;" required="">
							</div>
						</div>
					</div>
					<div class="col-md-4 col-sm-6">
						<div class="seat_researve_field">
							<div class="single_field">
								<label for="field1">Username</label>
								<input name="username" type="text" style="width: 223px;" required="">
