						</div>
					</div>
					<div class="col-md-4 col-sm-6">
						<div class="seat_researve_field">
							<div class="single_field">
								<label for="field6">Post Code</label>
								<input name="post_code" type="text" style="width: 223px;" required="">
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12">
						<div class="set_reserve_btn_area align_middle">
							<button class="labamba_default_btn color_change" type="submit">
                                Create an account
                            </button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</section>

